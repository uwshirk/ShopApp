@model EmailTestApp.Models.GroupModel

@{
    ViewBag.Title = "Remove Group";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div id="divContentStubborn">
        <h3>Are you sure you want to remove this entry?</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="dl-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.GroupName, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.GroupName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StartTime, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.StartTime, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GroupScore, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.GroupScore, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Limit, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Limit, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                @Html.HiddenFor(model => model.EventName)
                @Html.HiddenFor(model => model.EventDate)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Remove" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
