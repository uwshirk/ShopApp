@model EmailTestApp.Models.EventModel

@{
    ViewBag.Title = "Remove Event";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div id="divContentStubborn">
    <h3>Are you sure you want to remove this entry?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="dl-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.EventName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EventName, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Date, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <p></p>
        <div class="form-group">
            @Html.LabelFor(model => model.Location, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Location, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        @Html.HiddenFor(model => model.StartTime)
        @Html.HiddenFor(model => model.EndTime)
        @Html.HiddenFor(model => model.LeagueRef)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Remove" class="btn btn-default" />
            </div>
        </div>
    </div>
}
</div>
</body>
</html>
